@model IEnumerable<rogue.models.Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AtkItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpeedItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HpItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AtkItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpeedItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HpItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IdItem }) |
            @Html.ActionLink("Details", "Details", new { id = item.IdItem }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IdItem })
        </td>
    </tr>
}

</table>
